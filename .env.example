# Mahjong AI Tutor Configuration

# LLM Provider Selection
LLM_PROVIDER=ollama
# Options: "ollama" or "groq"

# Ollama Configuration (when LLM_PROVIDER=ollama)
OLLAMA_HOST=localhost
# For production server, use: OLLAMA_HOST=10.9.1.44
OLLAMA_PORT=11434
OLLAMA_MODEL=minicpm-v:latest

# Groq Configuration (when LLM_PROVIDER=groq)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
# Vision models: meta-llama/llama-4-scout-17b-16e-instruct (latest and best)

# Server Configuration  
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Security Configuration
MAX_REQUESTS_PER_MINUTE=20
RATE_LIMIT_WINDOW=60

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
# For production: ALLOWED_ORIGINS=http://10.9.1.44:8000,http://localhost:8000

# Logging
LOG_LEVEL=INFO